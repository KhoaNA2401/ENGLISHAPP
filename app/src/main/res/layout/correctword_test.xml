<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manhinhquiz"
    tools:context=".correctword_test">
    >

    <TextView
        android:id="@+id/TxtCauHoi"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="200dp"
        android:layout_marginRight="80dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/TxtTitle"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtCauHoi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:text="Your Answer :"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/EdtTraLoi"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TxtTitle"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/TxtTitle"
        android:minHeight="48dp"
        android:textSize="25dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/BtnBackFromTest"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_error"
        android:text="Back"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TxtNgoiSao"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginLeft="265dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/star"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/star" />

    <Button
        android:id="@+id/BtnTiepTuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EdtTraLoi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/black"
        android:text="Skip"
        android:textSize="25dp" />

    <Button
        android:id="@+id/BtnKiemTra"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EdtTraLoi"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Check"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/TxtDiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BtnTiepTuc"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TxtThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtNgoiSao"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:textSize="50dp"
        tools:text="3:00" />

</RelativeLayout>
